<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/add_measure_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="addMeasureBtn"
            android:text="@string/add_bar_btn" />

        <Button
            android:id="@+id/del_measure_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="delMeasureBtn"
            android:text="@string/del_bar_btn" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/eighth_button"
                android:layout_width="@dimen/box_dims"
                android:layout_height="@dimen/box_dims"
                android:onClick="eighthBtn"
                android:scaleType="fitXY"
                android:src="@drawable/music_eighthnote" />

            <ImageButton
                android:id="@+id/sixteenth_button"
                android:layout_width="@dimen/box_dims"
                android:layout_height="@dimen/box_dims"
                android:onClick="sixteenBtn"
                android:scaleType="centerCrop"
                android:src="@drawable/music_sixteennote" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/half_button"
                android:layout_width="@dimen/box_dims"
                android:layout_height="@dimen/box_dims"
                android:onClick="halfBtn"
                android:scaleType="fitXY"
                android:src="@drawable/music_halfnote" />

            <ImageButton
                android:id="@+id/quarter_button"
                android:layout_width="@dimen/box_dims"
                android:layout_height="@dimen/box_dims"
                android:onClick="quarterBtn"
                android:scaleType="fitXY"
                android:src="@drawable/ic_music_quarternote" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/whole_button"
            android:layout_width="@dimen/box_dims"
            android:layout_height="@dimen/box_dims"
            android:onClick="wholeBtn"
            android:scaleType="centerCrop"
            android:src="@drawable/whole_note" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/del_note_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="delNoteBtn"
            android:text="-" />
    </LinearLayout>

</LinearLayout>
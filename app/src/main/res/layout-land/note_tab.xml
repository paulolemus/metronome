<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/del_measure_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="delMeasureBtn"
            android:text="@string/del_bar_btn" />

        <Button
            android:id="@+id/add_measure_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addMeasureBtn"
            android:text="@string/add_bar_btn" />
    </LinearLayout>


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>

            <ImageButton
                android:id="@+id/whole_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="wholeBtn"
                android:scaleType="fitXY"
                android:src="@drawable/whole_note" />

            <Button
                android:id="@+id/eighth_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="eighthBtn"
                android:scaleType="fitXY"
                android:text="@string/eighth_btn" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/half_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="halfBtn"
                android:text="@string/half_btn" />

            <Button
                android:id="@+id/sixteenth_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sixteenBtn"
                android:text="@string/sixteenth_btn" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/quarter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="quarterBtn"
                android:text="@string/quarter_btn" />

            <Button
                android:id="@+id/diddle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="diddleBtn"
                android:text="@string/diddle_btn" />
        </TableRow>
    </TableLayout>

</LinearLayout>